{
  "name": "sample-test",
  "version": "1.0.0",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --coverage --verbose --testTimeout=30000 --passWithNoTests",
    "test:ci": "jest --coverage --verbose --testTimeout=30000 --passWithNoTests --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "build": "echo \"ðŸš€ Build completed successfully!\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "axios": "^1.4.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "passWithNoTests": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}